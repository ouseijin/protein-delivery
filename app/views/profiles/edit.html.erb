<div class="container">
  <%# タイトル %>
  <div class="user-title">
    <%= render 'shared/title', text: 'プロフィールの変更', html: '<span class="mr-2"><a href="/profile"><i class="fas fa-user mx-1"></i></i>プロフィール</a></span><i class="fas fa-angle-double-right mx-2"></i>'.html_safe %>
  </div>

  <div class="row mt-4">
    <div class="col-md-8 offset-md-2 text-center">
      <%= form_with model: @user, url: profile_path, local: true do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control mb-3' %>

        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control mb-3' %>

        <%= f.label :avatar %>
        <%= f.file_field :avatar, onchange: 'previewFileWithId(preview)', class: 'form-control mb-3', accept: 'image/*' %>
        <%= f.hidden_field :avatar_cache %>
        <div class='mt-3 mb-3'>
          <%= image_tag @user.avatar.url,
                        class: 'rounded-circle',
                        id: 'preview',
                        size: '100x100' %>
        </div>
        <div class="my-4">
          <%= f.submit class: 'btn btn-outline-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
