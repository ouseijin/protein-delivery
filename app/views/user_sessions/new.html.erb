<div class="container">
  <%# タイトル %>
  <div class="user-title">
    <%= render 'shared/title', text: 'ログイン', html: ''.html_safe %>
  </div>

  <div class="row">
    <div class=" col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <div class='text-center pt-5'>
        <%= link_to auth_at_provider_path(provider: :twitter), class:'flowbtn fl_tw' do %>
          <i class="fab fa-twitter"></i>
          <span>Twitter アカウントでログインする</span>
        <% end %>
        <%= link_to auth_at_provider_path(provider: :google), class:'flowbtn fl_goo' do %>
          <i class="fab fa-google"></i>
          <span>Google アカウントでログインする</span>
        <% end %>
        <hr class="hr1">
        <%= form_with url: login_path, local: true do |f| %>
          <div class="form-group pt-3">
            <i class="fas fa-envelope"></i>
            <%= f.label :email, User.human_attribute_name(:email) %>
            <%= f.text_field :email, class: 'form-control', placeholder: 'メールアドレスを入力して下さい' %>
          </div>
          <div class="form-group">
            <i class="fas fa-lock"></i>
            <%= f.label :password, User.human_attribute_name(:password) %>
            <%= f.password_field :password, class: 'form-control', placeholder: 'パスワードを入力して下さい' %>
          </div>
          <div class="actions pb-4">
            <%= f.submit 'ログインする', class: 'btn btn-block btn-success' %>
          </div>
        <% end %>
        <%= link_to new_user_path, class:'flowbtn fl_user' do %>
          <i class="fas fa-user-edit"></i>
          <span>新しくユーザーの登録をする</span>
        <% end %>
        <!--<a href="#">パスワードをお忘れの方はこちら</a>-->
      </div>
    </div>
  </div>
</div
