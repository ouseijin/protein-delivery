<div>
  <span class="service-rank px-4">
    <i class="fas fa-crown"></i>
    <%= "第#{j}位"%>
  </span>
  <%= render 'reviews/rate_average', { service: service } %>
</div>
<div class="pt-2">
  <div><h2><%= service.name %></h2></div>
  <div class="pt-3 px-4"><h5><%= service.body %></h5></div>
  <div class="rank-img-size pt-3">
    <%= image_tag "services/#{service.service_image}", size: '450x300' %>
  </div>
</div>