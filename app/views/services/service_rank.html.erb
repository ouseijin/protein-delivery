<div class="container">
  <%# タイトル 共通化したい %>
  <div class="rank-title">
    <%= render 'shared/title', text: 'ランキング', html: ''.html_safe %>
  </div>
  <%# ナビゲーションのタブ %>
  <ul class="nav nav-tabs nav-justified">
    <li class="nav-item">
      <%= link_to service_rank_path, class: 'nav-link font-weight-bold active' do %>
        <i class="fas fa-truck"></i>
        <span>サービスランキング</span>
      <% end %>
    </li>
    <li class="nav-item">
      <%= link_to menu_rank_path, class: 'nav-link' do %>
        <i class="fas fa-utensils"></i>
        <span>メニューランキング</span>
      <% end %>
    </li>
  </ul>

  <div class="text-center bg-light">
    <% @service_rate_ranks.each.with_index(1) do |rank, i| %>
      <%= link_to service_path(rank), class: "text-dark card-link" do %>
        <div class="py-5 border border-top-0 responsive-size">
          <div>
            <span class="service-rank px-4">
              <i class="fas fa-crown"></i>
              <%= "第#{i}位"%>
            </span>
            <%= render 'reviews/rate_average', { service: rank } %>
          </div>
          <div class="pt-2">
            <div><h2><%= rank.name %></h2></div>
            <div class="pt-3 px-4"><h5><%= rank.body %></h5></div>
            <div class="rank-img-size pt-3">
              <%= image_tag "services/#{rank.service_image}", size: '450x300' %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>